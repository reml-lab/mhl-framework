<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorPrimaryLight" />
            <corners
                android:radius="20dp" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#555555" />
            <corners
                android:radius="20dp" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/colorPrimaryDark" />
            <corners
                android:radius="20dp" />
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>

